# Database Configuration
DATABASE_URL=sqlite:///./pathway.db
# For PostgreSQL: postgresql://username:password@localhost/pathway_db

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
APP_NAME=Pathway Pharmacy POS
APP_VERSION=1.0.0
DEBUG=True

# Pharmacy Settings
PHARMACY_NAME=Your Pharmacy Name
PHARMACY_ADDRESS=123 Main St, City, State 12345
PHARMACY_PHONE=(555) 123-4567
PHARMACY_LICENSE=PH123456789

# Expiry Alert Settings (in days)
EXPIRY_ALERT_6_MONTHS=180
EXPIRY_ALERT_3_MONTHS=90
EXPIRY_ALERT_1_MONTH=30
EXPIRY_ALERT_1_WEEK=7

# Email Settings (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# Backup Settings
BACKUP_ENABLED=True
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# File Upload Settings
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,xlsx,csv
